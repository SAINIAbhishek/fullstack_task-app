{
  "compilerOptions": {
    "composite": true, // Enable project references and incremental builds
    "skipLibCheck": true, // Skip type checking of declaration files
    "module": "ESNext", // Specify module code generation (ESNext for modern JavaScript)
    "moduleResolution": "Node", // Use Node.js style module resolution
    "allowSyntheticDefaultImports": true // Allow default imports from modules with no default export
  },
  "include": ["vite.config.ts"], // Include only the Vite config file
  "extends": "./tsconfig.paths.json" // Extend from the base paths configuration
}
